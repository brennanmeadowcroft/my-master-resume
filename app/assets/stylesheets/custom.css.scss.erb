@import "overrides";
@import "bootstrap";


body {
	padding-top: 80px;
	padding-bottom: 40px;
	background: url(<%= image_path("blue-fade.png") %>) top left repeat;
}

h1, h2, h3, h4 {
	font-family: $headingsFontFamily;
}

.clearFloat {
	clear: both;
	float: none;
}

.public-navigation {
	@extend .navbar;
	@extend .navbar-inner;
	@extend .container;
	margin-top: -70px;
	background: transparent;
	border: none;
	box-shadow: none;

	.menu {
		@extend .nav-collapse;
		@extend .pull-right;
		margin: 0 0 40px 0;

		.menu-options {
			@extend .nav;
			list-style: none;
		}

		li {
			a {
				color: $mmrDarkBlue;
				font-family: $headingsFontFamily;
				font-size: 1.5em;

				&:hover {
					color: $mmrGreen;
				}
			}
		}
	}
}





/* Error information on a form */
#error_explanation h2 {
	background: #f2dede;

	h2 {
		background: #f2dede;
		font-weight: 4em;
	}

	ul {
		list-style: none;
		margin: 0 0 18px 0;

		li {}
	}
}

.field_with_errors {
	@extend .control-group;
	@extend .error;

	background-color: #444444;
}

.sidebar-nav {
	padding: 0px;

	ul.nav-list {
		padding: 0px;
		margin: 0px;
	}
}

.linkedin-import {
	.linkedin-instructions {
		h1 {
			margin-bottom: 10px;
		}
		p.sidenote {
			font-size: .8em;
			font-style: italic;
		}
	}

	.linkedin-form {
		margin-top: 15px;

		.import-header {
			margin-bottom: 5px;
		}

		.import-content {
			.import-form {
				.option {}

				.import-checkbox {}
			}
		}

		.current-items {
			padding-left: 10px;
			border-left: 1px solid #000000;
		}

		.import-buttons {
			margin-top: 10px;
		}

		.website-label {
			font-size: .8em;
		}
	}
}

a.btn-primary:visited, a.btn-extra-large:visited {
	color: #ffffff;
}

footer {
	@include makeRow();
	margin: 20px 0 0 0;
	background: url(<%= image_path("footer-background2.png") %>) top left repeat;

	h3, p {
		color: $mmrGray;
	}

	ul {
		margin: 0 0 0 0;
		padding: 0 0 0 0;
		list-style-type: none;

		li {
			margin: 5px 0 0 0;

			a {
				color: $mmrGray;

				&:hover {
					color: $mmrGreen;
					background-color: transparent;
				}

				&:visited {
					color: $mmrGray;
				}
			}
		}
	}

	.footer-content {
		@include makeRow();
		@include makeColumn(12);
		padding: 20px 0 10px 0;
		border-top: 1px solid #999999;
		border-bottom: 1px solid #999999;

		.quick-links {
			@include makeColumn(4);

			.link-columns {
				@include makeRow();

				.list-column {
					@include makeColumn(2);
				}
			}
		}

		.social-links {
			@include makeColumn(4);

			.social-icons {
				@include makeRow();
				@include makeColumn(4);
				
				li {
					margin: 0 20px 0 0;
					display: inline;
				}

				a {
					&:hover {
						background-color: transparent;
					}
				}
			}
		}

		.email-links {
			@include makeColumn(4);

			.email-subscribe {
				.mc-field-group input {
					width: 300px;
				}
			}
		}
	}

	.copyright {
		@include makeRow();
		@extend .container;

		margin: 20px 0 0 0;
		padding: 5px 20px 5px 20px;
		color: #707077;
		border-top: 1px solid #999999;
	}
}

.mmr-brand {
	margin: -10px 0 0 0;
	padding: 0 0 0 0;
	display: inline;

	a {
		margin: 0 0 0 0;
		padding: 0 0 0 0;
	
		&:hover {
			background-color: transparent;
			font-style: none;
		}	
	}

	img {
		width: 250px;
	}
}


/* Debug Information */
@mixin box_sizing {
	-moz-box-sizing: border-box; 
	-webkit-box-sizing: border-box; 
	box-sizing: border-box;
}

.debug_dump {
	clear: both;
	float: left;
	width: 100%;
	margin-top: 45px;
	@include box_sizing;
}

.import-choices {
	@extend .row;
}

.linkedin-choices {
	@extend .span4;
}
.mmr-choices {
	@extend .span4;
	@extend .offset1;
}


.update-form-buttons {
	@extend .row;
}
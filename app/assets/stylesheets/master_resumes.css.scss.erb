.master-resume {}

.master-resume-content {
	h1 {
	}

	.background {
		margin: 0px;
		padding: 40px;
		background: url(<%= image_path("blue-fabric-texture.jpeg") %>) top left repeat;
		border: 1px solid #333333;

		.resume {
			margin: auto;
			padding: 40px;
			background: url(<%= image_path("white.gif") %>) top left repeat;	/* http://www.flickriver.com/photos/wheatfields/tags/textures/ */
			border: 1px solid #444444;
			box-shadow: 2px 2px 3px #000;
			-moz-box-shadow: 2px 2px 3px #000;
			-webkit-box-shadow: 2px 2px 3px #000;
		}
	}

}

.new-section {
	padding: 0;
	margin: 20px 0 0 0;

	.new-section-header {
		padding-bottom: 5px;
		margin-bottom: 10px;
		border-bottom: 1px solid #000000;

		h2 {
			display: inline;
		}

		.add-new {}

		.line-item {
			padding: 0 0 0 20px;

			&:first-child {
				margin: 0;
			}
		}
	}

	.line-item {
		.description {
			margin: 0;
			padding: 0;
			display: inline;
		}

		.line-item-position {
			margin-top: 40px;
			margin-bottom: 40px;

			h4.description {
				display: inline;
				font-size: 2.0em;
			}

			.position-options {}

			.experience-item {
				display: inline;

				li.experience-description {
					width: 60%;
					display: inline;
				}
			}
		}

		.tag-list {
			margin-top: 0;
			padding-top: 0;

			li {
				margin: 0;
				padding: 0;
				display: inline;
			}
		}

		.actions {
			display: inline;

			li {
				margin: 0;
				padding: 0 0 0 5px;
				display: inline;
				border-left: 1px solid #000000;

				&:first-child {
					padding: 0 0 0 0;
					border: none;
				}
			}
		}
		
	}
}

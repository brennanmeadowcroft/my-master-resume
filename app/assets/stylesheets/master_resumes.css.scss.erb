.master-section {
	@include makeRow();
	padding: 0;
	margin: 20px 0 0 0;

	.master-section-header {
		padding-bottom: 5px;
		margin-bottom: 10px;
		border-bottom: 1px solid $mmrText;

		h2 {
			display: inline;
		}
	}

	.line-item {
		@include makeRow();

		&:first-child {
			margin: 0;
		}
		
		.description {
			margin: 0;
			padding: 0;
			display: inline;
		}
	}

	.actions {
		@include makeColumn(2);
		@extend .pull-right;
		text-align: right;

		li {
			margin: 0;
			padding: 0 0 0 5px;
			display: inline;
			border-left: 1px solid $mmrText;
			text-align: right;

			&:first-child {
				padding: 0 0 0 0;
				border: none;
			}
		}
	}

	.line-item-activity {
		@extend line-item;
		@include makeColumn(12);
		padding: 3px;
		margin: 0 0 3px 0;
		border-left: 5px solid #cccccc;

		&:hover {
			background: #cccccc;
		}

		.description {
			@include makeColumn(9);

			p {
				margin: 0;
				padding: 0;
			}
		}

		.actions {
			@extend .actions;
		}
	}

	.line-item-award {
		@extend line-item;
		@include makeColumn(12);
		padding: 10px;
		margin: 0 0 3px 0;
		border-left: 5px solid #cccccc;

		&:hover {
			background: #cccccc;
		}

		.description {
			@include makeColumn(9);

			h4 {
				margin: 0;
				padding: 0;
				font-size: 2.0em;
			}
		}

		.actions {
			@extend .actions;
		}
	}

	.line-item-education {
		@extend line-item;
		@include makeColumn(12);
		padding: 10px;
		margin: 0 0 3px 0;
		border-left: 5px solid #cccccc;

		&:hover {
			background: #cccccc;
		}

		.description {
			@include makeColumn(9);

			h4 {
				margin: 0;
				padding: 0;
				font-size: 2.0em;
			}
		}

		.actions {
			@extend .actions;
		}
	}

	.line-item-position {
		@extend .line-item;
		margin-bottom: 40px;

		.description {
			@include makeColumn(12);
			padding: 10px;
			margin-bottom: 3px;
			border-left: 5px solid #cccccc;

			h4 {
				@include makeColumn(10);
				margin: 0;
				padding: 0;
				font-size: 2.0em;
			}

			.position-options {
				@include makeColumn(2);
				@extend .dropdown;
				@extend .pull-right;
				font-weight: bold;
				font-size: 1.5em;

				a {
					&:hover {
						color: $mmrGray;
						background: none;
					}
				}
			}
		}

		.experience-item {
			@include makeRow();
			@include makeColumn(12);
			@extend .container;
			padding-left: 10px;
			margin-bottom: 3px;
			border-left: 5px solid $mmrBlue;

			&:hover {
				background: #cccccc;
			}

			.experience-description {
				@include makeColumn(9);
				margin: 0;
				padding: 0;

				p {
					margin: 0;
					padding: 0;
				}
			}

			.actions {
				@extend .actions;
			}
		}
	}

	.line-item-skill {
		@extend line-item;
		@include makeColumn(12);
		padding: 3px;
		margin: 0 0 3px 0;
		border-left: 5px solid #cccccc;

		&:hover {
			background: #cccccc;
		}

		.description {
			@include makeColumn(9);

			p {
				margin: 0;
				padding: 0;
			}
		}

		.actions {
			@extend .actions;
		}
	}

	.tag-list {
		@include makeRow();
		margin-top: 0;
		padding-top: 0;

		li {
			margin: 0;
			padding: 0 5px 0 0;
			display: inline;
			color: $mmrDarkBlue;
			font-style: italic;
		}
	}

	.no-tag {
		border-left: 5px solid $mmrGreen;
	}
}


.add-new-button {
	@extend .btn;
	@extend .btn-small;
	@extend .pull-right;
}

@import "overrides";
@import "bootstrap/variables";
@import "bootstrap/mixins";
@import "bootstrap/buttons";

body {
	padding-top: 80px;
	padding-bottom: 40px;
	background: url(<%= image_path("blue-fade-background.png") %>) top left repeat-x;
}

.static_content {
	@include makeRow();
	@include makeColumn(12);
}

.bm-nav {
	margin-top: -70px;
}

.navbar .nav {
	margin: 0 0 40px 0;
	li {
		a {
			/*color: #5b86c5;*/
			color: $mmrDarkBlue;
			font-family: $headingsFontFamily;
			font-size: 1.5em;

			&:hover {
				color: $mmrGreen;
			}
		}
	}
}


.feature-text {
	font-size: 1.2em;
	line-height: 1.4em;
}

.bm-vertical-spacing {
	padding-top: 60px;
}

.bm-background {
	background: url(<%= image_path("white.gif") %>) top left repeat;
}




p.center-image {
	text-align: center;
}

.btn-extra-large {
	margin-right: 30px;
	padding: 20px 30px 20px 30px;
}

.hero-unit {
	background-color: $white;
	background-image: url(<%= image_path("paperwork.jpeg") %>);
	background-position: 20% 50%;
	background-repeat: no-repeat;
	border: 1px solid #d4d4d4;

	h1 {
		margin-bottom: 10px;
		margin-right: 15px;
		font-size: 3.5em;
	}
	p {
		margin: 0 0 40px 0;
		font-size: 1.15em;
	}
}

.image-link:hover {
	background: none;
	text-decoration: none;
}

.feature-content {
	@include makeRow();
	@include makeColumn(12);

	margin-bottom: 20px;
	h1 {
		margin-bottom: 10px;
	}

	h2 {
		text-align: center;
		margin-bottom: 5px;
	}

	.primary-features {
		@include makeRow();

		margin-top: 20px;
		text-align: center;

		.feature {
			@include makeColumn(4);

			img {
				width: 150;
			}
		}

		.feature-image {
			margin: auto;
			display: block;
		}

		p {
			margin: auto;
			width: 66%;
			font-size: 1.25em;
		}
	}

	.secondary-features {
		@include makeRow();

		margin-top: 80px;
		text-align: center;

		.feature {
			@include makeColumn(3);
		}
	}

	.request-invite {
		@include makeRow();

		margin-top: 20px;
		text-align: center;

		.button {
			@extend .btn; 
			@extend .btn-success; 
			@extend .btn-extra-large;
		}
	}
}

.about-page {
	.about-content {
		@include makeRow();
		@include makeColumn(12);

		margin-bottom: 20px;
		h1 {
			margin-bottom: 10px;
		}

		ol {
			list-style-type: none;
			padding: 0 0 0 0;
			margin: 0 0 0 0;

			li {
				padding: 10px;
				width: 30%;
				display: inline-block;
				vertical-align: top;
			}
		}
	}

	.about-team {
		@include makeRow();
		@include makeColumn(12);

		.team-profile {
			@include makeRow();
			@include makeColumn(6);

			h3 {
				border-bottom: 1px solid $mmrGray;
			}

			.bio {
				@include makeRow();
				@include makeColumn(6);

				img {
					display: inline;
				}

				p {
					@include makeColumn(4, 2);
					display: inline;
					width: 50%;
				}
				.contact-info {
					@include makeRow();
					padding: 0 0 0 0;
					list-style-type: none;

					li {
						padding: 0 0 0 0;
						margin: 0 0 0 0;
						display: inline;

						img {
							width: 33px;
						}
					}
				}
			}
		}
	}
}


.contact-page {
	@include makeRow();
	@include makeColumn(12);
	
	.contact-form {
		@include makeRow();
		@include makeColumn(6);

		.contact-form-field {
			display: block;
			width: 300px;
		}

		.button {
			@extend .btn;
		}
	}

	.contact-intro {
		@include makeRow();

		margin-bottom: 20px;
	}

	.contact_map {
		@include makeColumn(6);
	}

	a {
		text-decoration: underline;
	}
}

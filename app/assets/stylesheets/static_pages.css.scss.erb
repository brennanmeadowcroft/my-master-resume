@import "overrides";
@import "bootstrap/variables";
@import "bootstrap/mixins";
@import "bootstrap/buttons";
@import "bootstrap/hero-unit";
@import "bootstrap/layouts";
@import "bootstrap/navbar";

body {
	padding-top: 80px;
	padding-bottom: 40px;
	background: url(<%= image_path("blue-fade-background.png") %>) top left repeat-x;
	font-size: 10px;
}

.static_content {
	@include makeRow();
	@include makeColumn(12);
}

.paper-box-background {
	background-image: url(<%= image_path("paperwork.jpeg") %>);
	background-color: $white;
	background-position: 20% 50%;
	background-repeat: no-repeat;
}

a.get-started-btn {
	@extend .btn;
	@extend .btn-large;
	@extend .btn-success;

	&:visited {
		font-color: $white;
	}
}

.homepage-content {
	@include makeRow();
	@include makeColumn(12);

	.masthead {
		@extend .hero-unit;
		@include makeRow();
		@extend .paper-box-background;
		border: 1px solid #d4d4d4;

		h1 {
			margin-bottom: 10px;
			margin-right: 15px;
		}

		.heading-copy {
			@include makeColumn(7);

			p {
				margin: 0 0 40px 0;
			}
		}
	}

	.banner-features {
		@include makeRow();
		padding-top: 40px;

		.feature {
			@include makeColumn(4);

			h2 {
				font-size: 2em;
			}

			.learn-more-button {
				@extend .btn;
				@extend .btn-primary;
			}
		}
	}
}

.feature-content {
	@include makeRow();
	@include makeColumn(12);

	margin-bottom: 20px;
	h1 {
		margin-bottom: 10px;
	}

	h2 {
		text-align: center;
		margin-bottom: 5px;
	}

	.primary-features {
		@include makeRow();

		margin-top: 20px;
		text-align: center;

		.feature {
			@include makeColumn(4);

			img {
				width: 150;
			}
		}

		.feature-image {
			margin: auto;
			display: block;
		}

		p {
			margin: auto;
			width: 66%;
			font-size: 1.25em;
		}
	}

	.secondary-features {
		@include makeRow();

		margin-top: 80px;
		text-align: center;

		.feature {
			@include makeColumn(3);
		}
	}

	.request-invite {
		@include makeRow();

		margin-top: 20px;
		text-align: center;

		.button {
			@extend .btn; 
			@extend .btn-success; 
			@extend .btn-extra-large;
		}
	}
}

.about-page {
	.about-content {
		@include makeRow();
		@include makeColumn(12);

		margin-bottom: 20px;
		h1 {
			margin-bottom: 10px;
		}

		ol {
			list-style-type: none;
			padding: 0 0 0 0;
			margin: 0 0 0 0;

			li {
				padding: 10px;
				width: 30%;
				display: inline-block;
				vertical-align: top;
			}
		}
	}

	.about-team {
		@include makeRow();
		@include makeColumn(12);

		.team-profile-left {
			@include makeRow();
			@include makeColumn(6);

			h3 {
				border-bottom: 1px solid $mmrGray;
			}

			.bio {
				@include makeRow();
				@include makeColumn(6);

				.bio-pic {
					@include makeColumn(2);

					img {
						width: 150px;
					}
				}

				.bio-content {
					@include makeColumn(3);

					.contact-info {
						@include makeRow();
						padding: 0 0 0 0;
						list-style-type: none;

						li {
							padding: 0 0 0 0;
							margin: 0 0 0 0;
							display: inline;

							img {
								width: 33px;
							}

							a:hover {
								background: transparent;
							}
						}
					}
				}
			}
		}
	}
}

.contact-page {
	@include makeRow();
	@include makeColumn(12);
	
	.contact-form {
		@include makeRow();
		@include makeColumn(6);

		.contact-form-field {
			display: block;
			width: 300px;
		}

		.button {
			@extend .btn;
		}
	}

	.contact-intro {
		@include makeRow();

		margin-bottom: 20px;
	}

	.contact_map {
		@include makeColumn(6);
	}

	a {
		text-decoration: underline;
	}
}

.invite-content {
	p {
		margin-top: 15px;
	}
	a {
		font-size: 0.7em;	
	}
	.form-box {
		@extend .hero-unit;
		@include makeRow();
		@extend .paper-box-background;
	}

	.form-copy {
		@include makeColumn(7);

		form {
			margin-top: 20px;
			margin-bottom: -10px;
		}

		.invite-button {
			@extend .btn;
			@extend .btn-success;
			margin-top: -10px;
		}
	}
}

.signin-content {
	.form-box {
		@extend .hero-unit;
		@include makeRow();
		@extend .paper-box-background;
	}

	.form-list {
		list-style-type: none;
		li {
			margin: 0;
			padding: 10px 0 0 0;
			text-indent: -1.7em;
		}

		label {
			display: inline;
		}
	}
}

<% provide(:title, "Sign In") %>
<div class="hero-unit">
	<div class="row">
		<h1 class="smaller-text">Sign In</h1>
		<div class="span7">
			<ul class="form-list">
			<%= form_for(:session, url: sessions_path) do |f| %>
				<li><%= f.text_field :email, :placeholder => "Email" %></li>
				<li><%= f.password_field :password, :placeholder => "Password" %></li>
				<li><%= link_to "Forgot Password?", new_password_reset_path %></li>
				<li><%= f.submit "Sign In", class: "btn btn-large btn-primary" %></li>
			<% end %>
			</ul>
			<p>New user? <%= link_to "Sign Up Now!", signup_path %></p>
		</div>
	</div>
</div>
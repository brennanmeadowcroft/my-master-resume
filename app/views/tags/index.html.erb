<% provide(:title, "#{current_user.first_name}'s Tags") %>
<h1>My Tags</h1>
<% @tags.each do |tag| %>
	<div class="row">
		<div class="span6">
			<%= tag.description %>
		</div>
		<div class="span4">
			<p><%= link_to edit_tag_path(tag) do %> 
					<i class="icon-search icon-edit"></i> Edit
				<% end %>
				| 
				<%= link_to tag, confirm: 'Are you sure?', method: :delete do %>
					<i class="icon-search icon-trash"></i> Delete
				<% end %>
			</p>
		</div>
	</div>
<% end %>

<br />

<%= link_to 'New Tag', new_tag_path, :class => "btn" %>

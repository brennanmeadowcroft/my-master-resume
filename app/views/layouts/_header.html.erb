			<% end %>
		</div>
		<div class="nav-collapse pull-right public-nav">
			<ul class="nav">
				<% if signed_in? %>
					<li><%= link_to "My Resumes", resumes_path %></li>
					<li><%= link_to "My Tags", tags_path %></li>
					</ul>

					<% if current_user.admin? %>

<div class="public-navigation">
	<div class="mmr-brand">
		<%= link_to root_path do %>
			<%= image_tag "Logo.png", :width => 250 %>
		<% end %>
	</div>
	<div class="menu">
		<ul class="menu-options">
			<% if signed_in? %>
				<li><%= link_to "My Resumes", resumes_path %></li>
				<li><%= link_to "My Tags", tags_path %></li>

				<% if current_user.admin? %>
					<li class="submenu-options">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown">
							Administration <b class="caret"></b>
						</a>
						<ul>
							<li><%= link_to "Users", users_path %></li>
							<li><%= link_to "Styles", styles_path %></li>
							<li><%= link_to "Reports", "#" %></li>
							<li><%= link_to "Beta Codes", beta_codes_path %></li>
							<li><%= link_to "Beta Requests", beta_requests_path %></li>
						</ul>
					</li>
				<% end %>
				<li class="submenu-options">
					<a href="#" class="dropdown-toggle" data-toggle="dropdown">
						Welcome, <%= current_user.first_name %> <b class="caret"></b>
					</a>
					<ul>
						<li><%= link_to "My Account", user_path(current_user) %></li>
						<li><%= link_to "Help & FAQ", "#" %></li>
						<li><%= link_to "Sign Out", signout_path %></li>
					</ul>
				</li>
							
			<% else %>
				<li><%= link_to "Sign In", signin_path %></li>
			<% end %>
		</ul>
	</div>
</div>
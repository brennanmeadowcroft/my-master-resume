<div class="row new-section">
	<h3 class="section-header">Skills</h3>
	<p class="add-new"><%= link_to "(Add New Skill)", new_skill_path %></p>
	<% @skills.each do |skill| %>
		<div class="row line-item">
			<div class="span6">
				<p><%= skill.description %></p>
			</div>
			<div class="span2">
				<ul class="actions">
					<li><%= link_to "Edit", edit_skill_path(skill) %></li>
					<li><%= link_to "Tag", edit_skill_path(skill) %></li>
					<li><%= link_to "Delete", skill_path(skill), confirm: 'Are you sure?', method: :delete %></li>
				</ul>
			</div>
		</div>
	<% end %>
</div>

<%= form_for(@position) do |f| %>
    <% if @position.errors.any? %>
        <div id="error_explanation">
            <h2><%= pluralize(@position.errors.count, "error") %> prohibited this position from being saved:</h2>

            <ul>
                <% @position.errors.full_messages.each do |msg| %>
                    <li><%= msg %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
    <div class="row">
        <div class="span4">
            <div class="field">
                <%= f.label :title %><br />
                <%= f.text_field :title %>
            </div>
            <div class="field">
                <%= f.label :company %><br />
                <%= f.text_field :company %>
            </div>
            <div class="field">
                <%= f.label :city %><br />
                <%= f.text_field :city %>
            </div>
            <div class="field">
                <%= f.label :state %><br />
                <%= f.text_field :state %>
            </div>
            <div class="field">
                <%= f.label :start_date %><br />
                <%= f.date_select :start_date, :start_year => 1980 %>
            </div>
            <div class="field">
                <%= f.label :end_date %><br />
                <%= f.date_select :end_date, :start_year => 1980 %>
            </div>
        </div>
    </div>
    <div class="row">
        <%= f.submit "Save", :class => 'btn-large btn-primary' %>
        <%= f.submit "Add Experiences", :class => 'btn-large btn-primary', :name => 'add' %>
        <%= link_to "Cancel", master_resumes_url %>
    </div>
<% end %>

<div class="field">
    <%= f.label :description %><br />
    <%= f.text_field :description %>
    <%= f.check_box :_destroy %>
    <%= f.label :_destroy, "Remove" %>
</div>
<div class="span4">
    <h4>Choose Tags</h4>
    <% @tags.each do |tag| %>
        <%= check_box_tag "position[experiences_attributes][#{i}][tag_ids][]", tag.id, Experience.find(f.object.id).tags.include?(tag) %>
        <%= tag.description %>
    <% end %>
    <p><%= link_to "Create A New Tag", new_tag_path %></p>
</div>
